<article class="post">
  <section class="post-head">
    <h4><%=  post.title %></h4>
    <small>
      <% if user_signed_in? && current_user.admin? %>
        |
        <%= link_to 'Изменить', edit_admin_post_path(post) %>
        |
        <%= link_to 'Удалить', admin_post_path(post), method: :delete, data: { confirm: 'Вы уверены?' } %>
      <% end %>
    </small>
  </section>

  <section class="post-summary clearfix">
    <time><%= post.created_at.to_date.strftime("%d %B, %Y") %></time>
    <br>
    <%= post.summary %>

  </section>

  <section class="footer-summary">
    <%= raw post.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'badge badge-primary' }.join(' ') %>
  </section>
</article>
